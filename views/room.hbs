<div class="container mt-4">
  <div class="row align-items-center justify-content-center">
    <h2 class="mb-4">{{room}}</h2>
    <div class="col-md-6">
      <div class="row justify-content-center mx-2">
        <h3>Big Red Button</h3>
        <button
          class="btn btn-lg btn-danger p-4 mb-4"
          style="border-radius:4rem"
          id="big-red-button"
          disabled="true"
        >BIG RED BUTTON</button>
      </div>

    </div>
    <div class="col-md-6">
      <h3>Chat</h3>
      <div
        class="p-2 my-2 border"
        style="height: 50vh; overflow-y: scroll; border-radius: 1rem;"
        id="message-log"
      >
        <div class="h2 font-weight-bold pl-2 m-0">
          {{room}}
          chat
        </div>
        <div class="h6 pb-4 pl-2 m-0">
          Messages will appear here
        </div>
      </div>
      <div class="input-group mb-3">
        <input
          id="message-box"
          type="text"
          class="form-control"
          placeholder="Text Message"
          aria-label="Text-Message"
          aria-describedby="message-button"
        />
        <button
          class="btn btn-primary"
          type="button"
          id="message-button"
        >Send</button>
      </div>
    </div>
  </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/javascripts/chat.js"></script>